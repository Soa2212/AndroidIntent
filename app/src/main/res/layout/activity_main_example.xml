<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityExample"
    android:background="@color/purple">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mi app"
            android:textAlignment="center"
            android:textSize="40dp"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/layout1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Intents Explicitos"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/btnStartActivity2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salir"/>
        <Button
            android:id="@+id/btnOpenCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Camera"/>
        <Button
            android:id="@+id/ViewActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pagina2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/layout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Intents implicitos "
            android:textAlignment="center"
            android:textSize="30dp"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/btnOpenGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Google"/>
        <Button
            android:id="@+id/btnOpenGoogleMaps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GoogleMap(Location)"/>
        <Button
            android:id="@+id/btnOpenYouTube"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Youtube"/>
        <Button
            android:id="@+id/btnOpenInstagram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instagram"/>
        <Button
            android:id="@+id/btnOpenContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone"/>
        <Button
            android:id="@+id/Share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share"/>
        <Button
            android:id="@+id/Countdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contador"/>




    </LinearLayout>
    <TextView
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/layout3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text=""
        android:id="@+id/mTextField"
        android:textSize="20dp"
        android:textAlignment="center"/>
    <Button
        android:id="@+id/BundleB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ekis"
        app:layout_constraintTop_toBottomOf="@id/mTextField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>